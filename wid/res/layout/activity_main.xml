<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wid.MainActivity" >

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
       
        android:text="NAME"
        android:textColor="#1abc9c"
        android:textSize="25sp" />


    <Button
        android:id="@+id/buttonSolution"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/buttonHint"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Solution"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="100dp"
        
        android:layout_height="42dp"
        android:layout_above="@+id/buttonSolution"
        android:layout_alignRight="@+id/buttonSolution"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Attempt"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/buttonHint"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/buttonSubmit"
        android:layout_alignLeft="@+id/textViewQues"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Hint"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textViewQues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_below="@+id/textViewName"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:maxWidth="450dp"
        android:minHeight="240dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="What is the Answer?"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:width="300dp" />

    <TextView
        android:id="@+id/textViewStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewName"
        android:layout_alignBottom="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/textViewName"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textColor="#95a5a6"
        android:textSize="20sp" />

    <EditText
        android:padding="2dp"
        android:id="@+id/editTextAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSolution"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonHint"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/buttonSubmit"
        android:background="@drawable/rounded_corner"
        android:inputType=""
        android:lines="1"
        android:textColor="#eee" />

</RelativeLayout>
<ListView android:id="@+id/drawerList"
    android:background="#ffecf0f1"
    android:textColor="#ffffff"
    android:divider="@null"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    ></ListView>
</android.support.v4.widget.DrawerLayout>
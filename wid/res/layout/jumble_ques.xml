<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#166f5e"
     >

     <TextView
         android:id="@+id/question"
         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:padding="10dp"
         android:background="@drawable/rounded_corner_lighter"
         android:fontFamily="sans-serif-light"
         android:text="question"
         android:textColor="#166f5e"
         android:textSize="25sp" />

    <Button
        android:id="@+id/buttonSolution"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/question"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:background="#00ffffff"
        android:text="View Solution"
        android:textColor="#166f5e"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/question"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="This is Solution!!"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_lighter"
        android:fontFamily="sans-serif-light"
        android:text="Back"
        android:textColor="#166f5e"
        android:textSize="17sp" />

</RelativeLayout>
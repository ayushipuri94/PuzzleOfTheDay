<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wid.MainMenu" >

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="penelope anne"
        android:text="MAIN MENU"
        android:textColor="#1abc9c"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageViewImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/Play"
        android:layout_below="@+id/textViewName"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:minHeight="120dp"
        android:src="@drawable/head_logo"
        android:textSize="20sp"
        android:width="300dp" />

    <Button
        android:id="@+id/Instructions"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/Exit"
        android:layout_marginBottom="10dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Instructions"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/other"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/Score"
        android:layout_alignRight="@+id/Play"
        android:layout_above="@+id/Score"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="All Categories"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/Score"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/Instructions"
        android:layout_alignRight="@+id/Instructions"
        android:layout_above="@+id/Instructions"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp"
        android:text="Score"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/Play"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/Score"
        android:layout_alignRight="@+id/Instructions"
        android:layout_above="@+id/other"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Logic"
        android:textColor="#ffffff"
        
        android:textSize="17sp" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>
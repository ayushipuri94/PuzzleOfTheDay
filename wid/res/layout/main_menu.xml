<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wid.MainMenu" >
    
    <Button
        android:id="@+id/Instructions"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/other"
        android:fontFamily="sans-serif-light"
        android:text="Instructions"
        android:background="#c8f463"
        android:textColor="#ffffff"
        android:textSize="25sp" />
 
    <Button
        android:id="@+id/other"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/imageViewImg"
        android:layout_marginTop="20dp"
        android:background="#1abc9c"
        android:fontFamily="sans-serif-light"
        android:text="DAILY BONUS QUESTIONS"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    

    <Button
        android:id="@+id/Exit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Instructions"
        android:layout_alignParentBottom="true"
        android:background="#ff6b6b"
        android:fontFamily="sans-serif-light"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="penelope anne"
        android:text="MAIN MENU"
        android:textColor="#1abc9c"
        android:textSize="35sp" />
    
    <ImageView
        android:id="@+id/imageViewImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/textViewName"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/Play"
        android:minHeight="120dp"
        android:src="@drawable/head_logo"
        android:textSize="20sp"
        android:width="300dp" />

    <Button
        android:id="@+id/Play"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/imageViewImg"
        android:layout_alignLeft="@+id/other"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:text="PLAY"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Play"
        android:layout_alignTop="@+id/imageViewImg"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imageViewImg"
        android:fontFamily="penelope anne"
        android:text="Give purpose to your life, twist your brain and test your skills!"
        android:textColor="#1abc9c"
        android:textSize="16sp" />

</RelativeLayout>